/*============================================================================
  # Timber Framework Overrides
==============================================================================*/

$colorHeaderBg: {{ settings.color_header_bg }};
// $backgroundUrl: {{product.images.last | img_url: "large"}}

.site-header__logo img {
  height: 45px;
  width: 45px;
}

.site-header {
  height: 62px;
}

.nav-bar {
  background: $colorHeaderBg;

  .wrapper {
    margin: 0;
    padding: 0;
    margin-right: 0;
    width: 100%;
    max-width: none;
  }

  .grid {
    max-width: none;
    margin: 0;
  }

  .grid__item {
    padding: 0;
  }
}

.site-nav li a {
  text-transform: uppercase;
  font-size: 12px;
  font-weight: 600;
  letter-spacing: .05em;
  font-family: Raleway;
  padding: 21px;
  color: #323232;
}

.site-nav>li:first-child a {
  padding-left: 20px;
}

#CartToggle {
  float: right;
  border-left: 1px solid #ddd;
  padding: 20px;
  color: #323232;
}

.site-header {
  border-bottom: 1px solid #ccc;
  padding: 0px;
}

.site-header__text-links a {
  padding: 20px;
  display: block;
  float: right;
}

.template-product {

  .product-hero-background {
    position: absolute;
    height: 540px;
    width: 100%;
    left: 0;
    top: 62px;
    right: 0;
    background-position: center top;
    background-size: cover;
    background-repeat: no-repeat;
    transition: all 550ms cubic-bezier(0.57, 0.06, 0.05, 0.95);
  }

  .hero-blur {
    height: 100%;
    width: 100%;
    background: rgba(0,0,0,0.50);
    display: none;
  }

  .product-single {
    position: relative;
    padding: 30px 70px;
  }

  #ProductPhoto img {
    max-height: 435px;
  }

  .product-single__thumbnails {
    position: absolute;
    top: 0;
    left: 0;
    width: 100px;

    li {
      width: 100%;
      padding-right: 30px;
      padding-left: 0;
    }
  }


  .product-info {
    color: #fff;
    padding-left: 70px;
    min-height: 475px;

    h1 {
      font-family: BrandonGrotesque-Regular;
      font-size: 24px;
      color: #FFFFFF;
      line-height: 34px;
      font-weight: 400;
      text-transform: uppercase;
    }

    .price-container {
      padding-bottom: 8px;
      margin-bottom: 5px;
    }

    .price-container:after {
      content: '';
      border-bottom: 3px solid #fff;
      height: 10px;
      display: block;
      width: 90px;
    }

    #ComparedPrice {
      text-decoration: line-through;
    }

    #ProductPrice, #ComparedPrice {
      display: inline-block;
      font-family: Adelle-Light;
      font-size: 22px;
      color: #FFFFFF;
      line-height: 32px;
      font-weight: 400;
    }

    .js-qty input {
      color: #fff;
      outline: none;
    }

    .js-qty__adjust {
      top: -3px;
      color: #fff;
    }

    .js-qty__adjust--minus, .ajaxcart__qty--minus, .js-qty__adjust--plus, .ajaxcart__qty--plus {
      border: none;
      outline: none;
      background: none !important;

      &:hover, &:active {
        outline: none;
        background: none;
      }
    }

    .product-description {
      font-family: ProximaNova-Regular;
      font-size: 16px;
      color: #FFFFFF;
      line-height: 25px;
      padding: 10px 0;
      max-width: 450px;
    }

    #AddToCart {
      background: #fff;
      border-radius: 0;
      color: #000;
      font-family: Adelle-Regular;
      font-size: 16px;
      font-weight: 400;
      width: 100%;
      line-height: 24px;
      text-transform: uppercase;
      padding: 15px;
    }

  }

  nav.breadcrumb {
    text-align: center;
  }
}