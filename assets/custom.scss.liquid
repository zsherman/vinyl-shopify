  padding: 0px;
}

.site-header__text-links a {
  padding: 20px;
  display: block;
  float: right;
}

.template-product {

  .grid {
    margin-left: 0;
  }

  .product-hero-background {
    position: absolute;
    height: 540px;
    width: 100%;
    left: 0;
    top: 62px;
    right: 0;
    background-position: center top;
    background-size: cover;
    background-repeat: no-repeat;
    transition: all 550ms cubic-bezier(0.57, 0.06, 0.05, 0.95);
  }

  .hero-blur {
    height: 100%;
    width: 100%;
    background: rgba(0,0,0,0.50);
    display: none;
  }

  .product-single {
    position: relative;
    padding: 30px 70px;
  }

  #ProductPhoto img {
    max-height: 435px;
  }

  .product-single__thumbnails {
    position: absolute;
    top: 80px;
    left: 50px;
    width: 90px;

    li {
      width: 100%;
      padding-right: 30px;
      padding-left: 0;
    }
  }


  .product-info {
    color: #fff;
    padding-left: 70px;
    min-height: 475px;

    h1 {
      font-family: BrandonGrotesque-Regular;
      font-size: 24px;
      color: #FFFFFF;
      line-height: 34px;
      font-weight: 400;
      text-transform: uppercase;
    }

    .price-container {
      padding-bottom: 8px;
      margin-bottom: 5px;
    }

    .price-container:after {
      content: '';
      border-bottom: 3px solid #fff;
      height: 10px;
      display: block;
      width: 90px;
    }

    #ComparedPrice {
      text-decoration: line-through;
    }

    #ProductPrice, #ComparedPrice {
      display: inline-block;
      font-family: Adelle-Light;
      font-size: 22px;
      color: #FFFFFF;
      line-height: 32px;
      font-weight: 400;
    }

    .js-qty input {
      color: #fff;
      outline: none;
    }

    .js-qty__adjust {
      top: -3px;
      color: #fff;
    }

    .js-qty__adjust--minus, .ajaxcart__qty--minus, .js-qty__adjust--plus, .ajaxcart__qty--plus {
      border: none;
      outline: none;
      background: none !important;

      &:hover, &:active {
        outline: none;
        background: none;
      }
    }

    .product-description {
      font-family: ProximaNova-Regular;
      font-size: 16px;
      color: #FFFFFF;
      line-height: 25px;
      padding: 10px 0;
      max-width: 450px;
    }

    #AddToCart {
      background: #fff;
      border-radius: 0;
      color: #000;
      font-family: Adelle-Regular;
      font-size: 16px;
      font-weight: 400;
      width: 100%;
      line-height: 24px;
      text-transform: uppercase;
      padding: 15px;
    }

  }

  nav.breadcrumb {
    text-align: center;
  }

  // Below the fold

  // About this record

  .about-this-box {
    padding: 30px;
  }

  .about-this-box-description {
    padding: 30px 30px 30px 40px;

    h2 {
      font-family: $lato;
      font-size: 32px;
      color: #324141;
      line-height: 42px;
      letter-spacing: 1px;
      font-family: ProximaNova-Bold;
    }

    .sub-header {
      font-family: $lato;
      font-size: 16px;
      color: #9FAEAE;
      line-height: 27px;
    }

    blockquote {
      font-family: Adelle-Italic;
      font-size: 15px;
      color: #959595;
      line-height: 26px;
      letter-spacing: 0px;
    }

    p.description {
      font-family: Adelle-Light;
      font-size: 15px;
      color: #454545;
      line-height: 26px;
      letter-spacing: 0px;
    }
  }

  .about-this-box-image {
    padding: 60px 30px;

    .vinyl-image {
      height: 470px;
      width: 470px;
      background: url('http://cdn.shopify.com/s/files/1/0570/2697/products/10f6ce8a62c3043ac72196a2bbb86ac265f39265_large.jpeg?v=1424561305');
      background-size: 100%;
      background-repeat: no-repeat;
      border-radius: 50%;
      cursor: pointer;
    }

    .play-button-wrapper {
      @include vertical-align;
      text-align: center;

      img {
        height: 100px;
        width: 100px;
      }
    }
  }

  // Large Image

  .large-product-image {
    height: 500px;
    background: url('http://pressplayok.com/wp-content/uploads/2014/09/artworks-000090042515-yxcb0g-t500x5001.jpg');
    background-size: cover;
    background-repeat: no-repeat;
    position: relative;
    overflow: hidden;

    .product-quote-wrapper {
      @include vertical-align;
    }

    .product-quote {
      width: 500px;
      margin: 0 auto;
      background: #fff;
      text-align: center;
      padding: 30px;
    }

    .product-quote h2 {
      font-family: ProximaNova-Light;
      font-size: 24px;
      font-weight: 400;
      // text-transform: uppercase;
      letter-spacing: .5px;
      color: #000000;
      line-height: 27px;
      padding: 10px;
    }

    .product-quote h2:after {
      content: '';
      border-bottom: 3px solid #000;
      display: block;
      width: 90px;
      margin: 0 auto;
      padding: 10px;
    }

    .product-quote p {
      font-family: ProximaNova-Regular;
      font-size: 14px;
      color: #252525;
      padding: 10px 0 0 0;
    }
  }

  .top-triangle {
    height: 0;
    border-width: 0 0 70px 2000px;
    border-style: solid;
    border-color: transparent #fff #fff transparent;
    position: absolute;
    bottom: 0;
  }

  .bottom-triangle {
    height: 0;
    border-width: 0px 0px 70px 2000px;
    border-style: solid;
    border-color: transparent transparent transparent #fff;
    position: absolute;
    top: 0;
  }

  // Tracks styles

  .syllabus {
    border-bottom: 1px solid #E2E2E2;
    padding: 40px;
  }

  .syllabus-description {

    h2 {
      font-family: $lato;
      font-size: 32px;
      color: #324141;
      line-height: 42px;
      letter-spacing: 1px;
      font-family: ProximaNova-Bold;
    }

    .sub-header {
      font-family: $lato;
      font-size: 16px;
      color: #9FAEAE;
      line-height: 27px;
    }

    blockquote {
      font-family: Adelle-Italic;
      font-size: 15px;
      color: #959595;
      line-height: 26px;
      letter-spacing: 0px;
    }

    p.description {
      font-family: Adelle-Light;
      font-size: 15px;
      color: #454545;
      line-height: 26px;
      letter-spacing: 0px;
    }
  }

  .syllabus-lessons {

  }

  .syllabus-lessons ul {
    padding-top: 40px;
  }

  .syllabus-lessons li {
    font-family: $lato;
    font-size: 14px;
    color: #324141;
    line-height: 27px;
    border-bottom: 1px solid #eee;
    padding: 12px 0 12px 38px;
    position: relative;

    .play-button {
      position: absolute;
      left: 0;
      font-size: 24px;
    }

    .play-button i {
      color: #CACACA;
    }

    span {
      position: absolute;
      right: 0;
      background: #203C6E;
      color: #fff;
      padding: 1px 5px;
      border-radius: 4px;
      font-size: 11px;
      cursor: pointer;
    }
  }

  .ingredients {
    padding: 40px;
  }

  .ingredients img {
    height: 150px;
    width: 150px;
    float: left;
    padding-right: 20px;
  }

  .ingredients h1 {
    font-family: ProximaNova-Bold;
    font-size: 32px;
    color: #324141;
    line-height: 42px;
    letter-spacing: 1px;
    width: 60%;
    text-align: center;
    margin: 0 auto;
    padding-bottom: 20px;
  }

  .ingredient {
    padding: 20px 50px 20px 0;
  }

  .ingredient:nth-child(2n+1) {
    padding-left: 20px;
  }

  .ingredient h3 {
    font-family: ProximaNova-Semibold;
    font-size: 18px;
    color: #191919;
    line-height: 21px;
    letter-spacing: 0px;
  }

  .ingredient p {
    font-family: ProximaNova-Regular;
    font-size: 16px;
    color: #5A5A5A;
    line-height: 25px;
  }




}



// Keyframes

.vinyl-image {
    -webkit-transition-property: -webkit-transform;
    -webkit-transition-duration: 1s;

    -moz-transition-property: -moz-transform;
    -moz-transition-duration: 1s;
}
.vinyl-image-playing {
    -webkit-animation-name: rotate;
    -webkit-animation-duration: 3s;
    -webkit-animation-iteration-count: infinite;
    -webkit-animation-timing-function: linear;

    -moz-animation-name: rotate;
    -moz-animation-duration: 3s;
    -moz-animation-iteration-count: infinite;
    -moz-animation-timing-function: linear;
}

@-webkit-keyframes rotate {
    from {-webkit-transform: rotate(0deg);}
    to {-webkit-transform: rotate(360deg);}
}

@-moz-keyframes rotate {
    from {-moz-transform: rotate(0deg);}
    to {-moz-transform: rotate(360deg);}
}