$raleway: 'Raleway', sans-serif;
$brandon: 'Brandon-Grotesque', sans-serif;
$proxima: 'Proxima-Nova', sans-serif;

@mixin vertical-align {
  position: relative;
  top: 50%;
  -webkit-transform: translateY(-50%);
  -ms-transform: translateY(-50%);
  transform: translateY(-50%);
}

.zig-zag {
  position: relative;
  width: 200px;
  height: 0px;
  margin-top: 5px;
  padding: 5px;
  background: #fff;
}

.zig-zag:before {
  content: "";
  display: block;
  position: absolute;
  top: -10px;
  width: 100%;
  height: 10px;
  background: linear-gradient(135deg, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0) 75%, #9AA4B1 75%, #9AA4B1), linear-gradient(225deg, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0) 75%, #9AA4B1 75%, #b6b5eb), linear-gradient(45deg, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0) 75%, #9AA4B1 75%, #9AA4B1), linear-gradient(315deg, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0) 75%, #9AA4B1 75%, #9AA4B1);
  background-position: 0.5em 0.5em, 0.5em 0.5em, 0 0.5em, 0 0.5em;
  background-size: 1em 1em;
  left: -50px;
  top: -1em;
  height: 1em;
  width: 100%;
  transform: scale(.5);
}

.btn, input[type="submit"] {
