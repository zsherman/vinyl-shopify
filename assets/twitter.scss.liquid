// Twitter Collection Styles

.tweet-collection {
  background: #f7f8f9;
  padding: 10px 0 40px 0;

  @mixin clearfix {
    &:after {
      content: "";
      display: table;
      clear: both;
    }
  }

  // Common styles
  html, body {
    overflow-x: hidden;
  }

  %awesome {
    font-family: "Fontawesome";
    -webkit-font-smoothing: antialiased;
  }

  body {
    background: white;
    font-family: "Open Sans", sans-serif;
    margin: 0;
    padding: 0;
  }

  h2 {
    font-size: 2em;
    text-align: center;
    margin: 0;
  }

  h5 {
    text-align: center;
    margin: 0 0 3em;
  }

  .container {
    max-width: 960px;
    margin: 0 auto;
    padding: 1em 0 3em;
    ul {
      list-style: none;
      margin: 0;
      padding: 0;
      @include clearfix;
    }
  }

  #tw-widget {
    li {
      background: white;
      max-width: 340px;
      min-width: 300px;
      width: 33%;
      display: inline-block;
      vertical-align: top;
      margin: 5px;
      position: relative;
      border-radius: 6px;
      box-shadow: 0px 0px 25px -4px rgba(0, 0, 0, 0.4);
      margin: 0 auto;
      float: left;
      min-height: 1px;
      vertical-align: top;
      -webkit-box-sizing: border-box;
      -moz-box-sizing: border-box;
      box-sizing: border-box;
      background: #fff;
      border-radius: 5px;
      border-style: solid;
      border-width: 1px;
      border-color: rgb(238, 238, 238) rgb(221, 221, 221) rgb(187, 187, 187);
      box-shadow: rgba(0, 0, 0, 0.14902) 0px 1px 3px;
      margin-right: 50px;
    }

    li:nth-child(n+3) {
      margin-right: 0;
    }

    a {
      text-decoration: none;
    }
    // Top section: image + user
    .user {
      background: #fff;
      padding: 20px 20px 10px;
      position: relative;
      border-radius: 6px 6px 0px 0px;
      border-bottom: 1px solid #DADADA;
      color: #000;
      a {
        span {
          position: absolute;
          display: block;
          top: 0;
          text-align: left;
          width: 100%;
        }
        // Target name
        span[data-scribe="element:name"] {
          position: absolute;
          top: 21px;
          left: 55px;
          font-size: 16px;
          color: #000;
          font-weight: bold;
        }
        // Target username (@screen-name)
        span[data-scribe="element:screen_name"] {
          position: absolute;
          top: 42px;
          left: 74px;
          font-size: 14px;
          color: #888;
        }
      }
    }
    // Tweet content
    .tweet {
      margin: 0;
      padding: 20px;
      color: lighten(black, 30%);
      font-weight: normal;
      a {
        color: lighten(black, 30%);
        font-weight: bold;
        text-decoration: none;
      }
      a[data-scribe="element:url"] {
        color: #00ae8e;
      }
      a[data-scribe="element:hashtag"] {
        color: #fd7a79;
      }
    }
    // Buttons - footer
    .interact {
      margin: 0;
      padding: 0;
      position: relative;
      background: #04c6c4;
      border-radius: 0px 0px 6px 6px;
      border-top: 1px solid darken(#04c6c4, 5%);
      a {
        padding: 15px 0;
        text-decoration: none;
        color: white;
        background: #04c6c4;
        &:hover {
          color: lighten(black, 30%);
          background: darken(#04c6c4, 2%);
        }
        &:active {
          box-shadow: inset 0px 0px 10px -4px rgba(0, 0, 0, 0.75);
        }
        &:first-child {
          border-radius: 0px 0px 0px 6px;
        }
        &:last-child {
          border-radius: 0px 0px 6px 0px;
        }
      }
      .twitter_reply_icon, .twitter_fav_icon, .twitter_retweet_icon {
        text-align: center;
        font-size: 0px;
        width: calc(100% / 3);
        display: inline-block;
        &:before {
          font-size: 22px;
          font-family: "Fontawesome";
          -webkit-font-smoothing: antialiased;
          padding-right: 4px;
        }
      }
      .twitter_reply_icon {
        &:before {
          content: "\f112";
        }
      }
      .twitter_retweet_icon {
        &:before {
          content: "\f079";
        }
      }
      .twitter_fav_icon {
        &:before {
          content: "\f005";
        }
      }
    }
    // Posted ON formating
    .timePosted {
      margin: 0 0 10px;
      padding: 0 20px;
      font-size: 12px;
      text-align: right;
      &:before {
      }
    }
  }

}

@media (max-width: 1180px) {
  .tweet-collection #tw-widget li {
    margin-right: 10px;
  }
}

@media (max-width: 1100px) {
  .tweet-collection #tw-widget li {
    max-width: 300px;
    min-width: 300px;
  }
}

@media (max-width: 420px) {
  .tweet-collection #tw-widget li {
    width: 100%;
    margin: 10px auto !important;
    float: none;
    display: block;
  }
}